                    Style="{StaticResource MyButton}"/>
                <Button ToolTip="新建笔记" Background="#FFFFAFDF" 
                    Style="{StaticResource MyButton}"/>
                <Button ToolTip="新建笔记" Background="#FFD7AFFF" 
                    Style="{StaticResource MyButton}"/>
                <Button ToolTip="新建笔记" Background="#FF9EDFFF" 
                    Style="{StaticResource MyButton}"/>
                <Button ToolTip="新建笔记" Background="#FFE0E0E0" 
                    Style="{StaticResource MyButton}"/>
                <Button ToolTip="新建笔记" Background="#FF767676" 
                    Style="{StaticResource MyButton}"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</UserControl>
