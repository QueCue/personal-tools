<Window x:Class="Memo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memo" xmlns:sy="clr-namespace:SYControlLibrary;assembly=SYControlLibrary"
        mc:Ignorable="d" WindowStyle="None"  Background="#E5ADD8E6"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize" AllowsTransparency="True"
        Title="MainWindow" Height="330" Width="240" Loaded="MainWindow_OnLoaded"
        SizeChanged="Window_SizeChanged" ShowInTaskbar="False" TextOptions.TextFormattingMode="Display"
        RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" UseLayoutRounding="True">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Name="TitleBar" Grid.Row="0" Background="LightSteelBlue" />
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="+" Width="20" Height="20" Margin="5"/>
            <TextBlock Text="标题" VerticalAlignment="Center" Margin="0,7,0,6" Height="17"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button FontSize="14" Width="30" Height="30" Margin="5" Click="OnOptionClick">
                <Button.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Memo;component/res/set.png"/>
                </Button.Background>
                <Button.Foreground>
                    <ImageBrush ImageSource="pack://application:,,,/Memo;component/res/close.png"/>
                </Button.Foreground>
            </Button>
            <Button Content="←" FontSize="14" Width="20" Height="20" Click="OnTopMostClick"/>
            <sy:SYButtonEX x:Name="m_CloseBtn" Width="20" Height="20"
                         Click="OnCloseClick" Margin="5">
                <sy:SYButtonEX.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Memo;component/res/close.png"/>
                </sy:SYButtonEX.Background>
            </sy:SYButtonEX>
        </StackPanel>
        <TextBox Grid.Row="1" Margin="10" Text="141223" FontSize="16" 
                 Background="Transparent" BorderThickness="0" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
        <!--<RichTextBox Grid.Row="1"  >
            <FlowDocument>
                <Paragraph>
                    <Run Text="按时发顺丰"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>-->
    </Grid>
</Window>
